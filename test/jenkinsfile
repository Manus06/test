pipeline{
    agent any
    
    stages {
        stage('Compile Stage') { 
        	st{
            maven(maven : 'maven_3_6_2'){
                      sh 'mvn clean compile'          
                                
            }
            
       		 }
		}
		
		stage('Testing Stage') { 
        	steps{
            maven(maven : 'maven_3_6_2'){
                      sh 'mvn test'          
                                
            }
            
       		 }
		}
		
		stage('Deployment Stage') { 
        	steps{
            maven(maven : 'maven_3_6_2'){
                      sh 'mvn deploy'          
                                
            }
            
       		 }
		}
            

        }
    
}
